@model IEnumerable<AppDev.Models.AssignTraineeToCourse>

@{
	ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Trainee)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Course)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.CreateAt)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Trainee.FullName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Course.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.CreateAt)
				</td>
				<td>
					<a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
				</td>
			</tr>
		}
	</tbody>
</table>
